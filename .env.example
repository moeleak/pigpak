# Telegram bot settings
BOT_TOKEN=
# Optional: used for share links if SHARE_BASE_URL is not set
BOT_USERNAME=
# Override API URL for self-hosted or proxy
TELEGRAM_API_URL=https://api.telegram.org

# Data storage
DATA_DIR=./data
DB_PATH=./data/bot.db

# Long polling
POLL_TIMEOUT=30s
PAGE_SIZE=8

# Share links
# Example: https://t.me/YourBot
SHARE_BASE_URL=

# WebDAV settings
WEB_DAV_ENABLE=false
WEB_DAV_ADDR=:8081
WEB_DAV_USER=
WEB_DAV_PASSWORD=
# Telegram user ID whose tree is exposed via WebDAV
WEB_DAV_OWNER_ID=
# Telegram chat ID used to upload files from WebDAV
STORAGE_CHAT_ID=
